<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical|left"
    android:orientation="horizontal"
    android:paddingLeft="3dp"
    android:paddingTop="5dp"
    android:id="@+id/browseitem">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/carditem"
        android:layout_width="175dp"
        android:layout_height="200dp"
        android:onClick="clickMeCard"
        card_view:cardUseCompatPadding="true"
        >

        <RelativeLayout
            android:id="@+id/cardRelLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF">
            <ImageView
                android:src="@drawable/heartimage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:id="@+id/browseimage1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:id="@+id/browsetext"
                android:paddingLeft="12dip"
                android:paddingTop="12dip"
                android:layout_marginTop="150dip"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"

                android:text="Browsing Section"
                android:background="#F44336"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/carditem2"
        android:layout_width="175dp"
        android:layout_height="200dp"
        android:layout_marginLeft="4dp"
        android:onClick="clickMeCard"
        card_view:cardUseCompatPadding="true"
        >

        <RelativeLayout
            android:id="@+id/cardRelLay2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF">
            <ImageView
                android:src="@drawable/heartimage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:id="@+id/browseimage2"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:id="@+id/browsetext2"
                android:paddingLeft="12dp"
                android:paddingTop="12dp"
                android:layout_marginTop="150dp"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:background="#F44336"
                android:text="Browsing Section"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
