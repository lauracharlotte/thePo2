<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <!--<TextView-->
    <!--android:id="@+id/section_label"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:text="Upload tab"/>-->

    <EditText
        android:id="@+id/artistName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Artist Name"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/browse_file"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/songTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/artistName"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Title" />

    <Spinner
        android:id="@+id/spinner_genres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/songTitle"
        android:layout_alignParentStart="true"
        android:entries="@array/genres"/>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:text="Finish"
        android:padding="13dp"
        android:drawableRight="@android:drawable/ic_menu_upload"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/browse_file"
        android:onClick="actuallyRecord"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Browse file"
        android:drawableLeft="@android:drawable/ic_menu_search"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/stopRecord"
        android:onClick="stopRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_marginBottom="28dp"
        android:text="Stop Recording" />

    <Button
        android:id="@+id/playitback"
        android:onClick= "playBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/stopRecord"
        android:layout_alignStart="@+id/stopRecord"
        android:layout_marginBottom="26dp"
        android:text="Play Back" />

    <Button
        android:id="@+id/stopplaying"
        android:onClick="stopPlaying"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/playitback"
        android:layout_centerHorizontal="true"
        android:text="Stop Playing" />

    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/stopRecord"
        android:layout_centerHorizontal="true"
        android:text="Button" />


</RelativeLayout>