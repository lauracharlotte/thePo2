<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.thepo.ArtistInfo">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@drawable/cutepugimage"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/concertimage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/bandTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:paddingLeft="16dp"
            android:text="The Ha'Pennies"
            android:textColor="@android:color/white"
            android:textSize="26sp"
            android:textStyle="bold"
            android:layout_above="@+id/bandSpotify"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="11dp" />

        <TextView
            android:id="@+id/bandSpotify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:paddingLeft="16dp"
            android:textSize="16sp"
            android:text="Spotify: "
            android:textColor="@android:color/white"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/bandBandCamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:paddingLeft="16dp"
            android:textSize="14sp"
            android:text="BandCamp: https://thehapennies.bandcamp.com/"
            android:textColor="@android:color/white"
            android:layout_below="@+id/bandSoundCloud"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/bandSoundCloud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:paddingLeft="16dp"
            android:textSize="16sp"
            android:text="SoundCloud: "
            android:textColor="@android:color/white"
            android:layout_below="@+id/bandSpotify"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id = "@+id/songListt"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
